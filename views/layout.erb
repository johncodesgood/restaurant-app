<body>

	<div class="container">

		<div class="sixteen columns">
				<% if session[:current_user] %>
			   	<form action="/sessions" method='post' style="display: inline-block; margin: 20px 0px 0px 0px">
      			<input type="hidden" name='_method' value='delete'>
      			<input type="submit" value='Log Out'>
    			</form>
  			<% else %>
    			<form action="/sessions/new" method="post" style="display: inline-block; margin: 20px 0px 0px 0px">
  					<input type="text" style="display: inline-block" name="username" placeholder ='...username'>
  					<input type="password" style="display: inline-block" name="password" placeholder ='...password'>
  					<input type="submit" style="display: inline-block; margin-left: 10px" value='Log In '>
					</form>
					 <form action="/sessions/newuser" method='get' style="display: inline-block; margin: 20px 0px 0px 10px">
      			<input type="submit" value='Sign Up'>
    			</form>
  			<% end %>

			<h1 style="margin-top: 20px"><strong>RESTaurant Order Servicing</strong></h1>

			<br>
			<hr />
			<ul  id="nav"> 
				<li><a href="/">Home</a></li>
				<li><a href="/foods">Menu</a></li>
				<li><a href="/parties">Parties</a></li>
				<li><a href="/orders">Orders</a></li>
			</ul>
			<hr />
		</div>

 	</div>
 	
 	<br>
 	<br>
	<div>

		<%= yield %>
	
	</div>

</form>
