<div class="container">
	<div class="sixteen columns">

	<h3><strong>Edit Parties</strong></h3>
	<br>
	<form action="/parties/<%= @party.id %>" method="post">
		<input type="hidden" name="_method" value="patch"/></input>
		<p>Last Name of Party: <input name="party[name]" value="<%= @party.name %>"></input></p>
		<p>Table Number: <input name="party[table_num]" value="<%= @party.table_num %>"></input></p>
		<p>Number of Guests: <input name="party[num_guests]" value="<%= @party.num_guests %>"></input></p>
		<p>Paid?: <input name="party[paid]" value="<%= @party.paid %>"></input></p>
		<br>
		<input type="submit" value="Edit Party"></input>
	</form>
</div>
</div>